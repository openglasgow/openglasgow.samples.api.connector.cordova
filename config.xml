<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.gov.glasgow.open.datapublishersample" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Open Glasgow Publisher</name>
    <description>
        Code sample to publish files to the Open Data Platform from a mobile app using Apache Cordova.
    </description>
    <author email="open@glasgow.gov.uk" href="http://developers.open.glasgow.gov.uk">
        OPEN Glasgow
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-minSdkVersion" value="14" />
</widget>
